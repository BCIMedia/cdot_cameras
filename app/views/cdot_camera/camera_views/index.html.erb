<p id="notice"><%= notice %></p>

<h1>Listing Camera Views</h1>
<%= link_to 'New Camera view', new_camera_view_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Source</th>
      <th>Cdot view</th>
      <th>Direction</th>
      <th>Image location</th>
      <th>Display order</th>
      <th>Road name</th>
      <th>Road</th>
      <th>Last updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @camera_views.each do |camera_view| %>
      <tr>
        <td><%= camera_view.name %></td>
        <td><%= camera_view.description %></td>
        <td><%= camera_view.source %></td>
        <td><%= camera_view.cdot_view_id %></td>
        <td><%= camera_view.direction %></td>
        <td><%= camera_view.image_location %></td>
        <td><%= camera_view.display_order %></td>
        <td><%= camera_view.road_name %></td>
        <td><%= camera_view.road_id %></td>
        <td><%= camera_view.last_updated_at %></td>
        <td><%= link_to 'Show', camera_view %></td>
        <td><%= link_to 'Edit', edit_camera_view_path(camera_view) %></td>
        <td><%= link_to 'Destroy', camera_view, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
